<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\down.png" />
    <None Remove="Resources\up.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Resources\down.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Resources\up.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\PdfStampGenerator.Core\PdfStampGenerator.Core.csproj" />
    <ProjectReference Include="..\PdfStampGenerator.Services\PdfStampGenerator.Services.csproj" />
  </ItemGroup>

</Project>
